*
	padding 0
	margin 0

body
	background #164b69
	font-size 14px
	font-family Arial, Helvetica, sans-serif

p
	text-align justify
	text-indent 2em
	line-height 2em
	word-spacing 0.25em
	
.main-body
	display block
	margin 32px 32px
	padding 20px
	background #e3e3e3
	min-width 700px
	min-height 700px

.menu
	display grid
	grid-template-columns repeat(6, 1fr)
	align-items center
	justify-items stretch

$hover-menu-item = #dcdcdc
$menu-item-label-color = black

.menu-link
	font-weight bold
	color $menu-item-label-color
	text-decoration none
	text-align center
	padding 10px 5px

.menu-link:hover
	background $hover-menu-item
	color $menu-item-label-color
	text-decoration none

.menu-link-active
	background $hover-menu-item