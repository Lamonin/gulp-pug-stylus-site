<!DOCTYPE html>
-var menus = ['CSS', 'Синтаксис CSS', 'Вставка CSS', 'CSS текст', 'CSS шрифт', 'Блоки']
block variables
html
	head
		meta(charset="UTF-8")
		meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
		title #{title}
		link(rel="stylesheet", href="css/bootstrap-reboot.min.css")
		link(rel="stylesheet", href="css/main.css")
	body
		mixin createMenu
			div(class="menu")
					each label, i in menus
						if i == active
							a(class='menu-link menu-link-active')=label
						else
							a(class='menu-link')=label

		div(class="main-body")
			block menu
				+createMenu
			block content
		
		//- Scripts
		script(src="js/jquery-3.5.1.min.js")
		script(src="js/main.js")